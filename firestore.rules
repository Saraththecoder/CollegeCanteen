rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Securely check admin status via token or specific user document
      return isAuthenticated() && 
             (request.auth.token.email == 'admin@canteen.com' || 
              (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN'));
    }

    // Data Validation Helpers
    function isString(data) { return data is string; }
    function isNumber(data) { return data is number || data is int || data is float; }
    function isBoolean(data) { return data is bool; }
    function isNotEmpty(data) { return isString(data) && data.size() > 0; }
    
    // Limits
    function isValidAmount(amount) {
      return isNumber(amount) && amount > 0 && amount < 10000; // Cap max order value
    }
    
    function isValidPhone(phone) {
       return isString(phone) && phone.size() >= 10 && phone.size() <= 15;
    }

    // ==========================================
    // SETTINGS COLLECTION
    // ==========================================
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ==========================================
    // USERS COLLECTION
    // ==========================================
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      
      allow create: if isAuthenticated() && 
                       isOwner(userId) &&
                       request.resource.data.keys().hasAll(['email', 'displayName', 'role']) &&
                       // Prevent role spoofing
                       request.resource.data.role == 'USER';
      
      allow update: if isOwner(userId) &&
                       // Prevent role escalation
                       request.resource.data.role == resource.data.role;
      
      allow delete: if isAdmin();
    }
    
    // ==========================================
    // MENU ITEMS COLLECTION
    // ==========================================
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }
    
    // ==========================================
    // ORDERS COLLECTION
    // ==========================================
    match /orders/{orderId} {
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       // 1. Validate Amounts
                       isValidAmount(request.resource.data.totalAmount) &&
                       
                       // 2. Validate Items Structure
                       request.resource.data.items.size() > 0 &&
                       request.resource.data.items.size() <= 20 && // Max 20 unique items per order
                       
                       // 3. Validate Status (Must start as PENDING)
                       (request.resource.data.status == 'PENDING') &&
                       
                       // 4. Validate Contact Info
                       isNotEmpty(request.resource.data.customerName) &&
                       request.resource.data.customerName.size() < 100 &&
                       isValidPhone(request.resource.data.customerMobile);
      
      // Only Admin can change status to CONFIRMED/READY
      // User can only CANCEL
      allow update: if isAdmin() || 
                       (isOwner(resource.data.userId) &&
                        request.resource.data.status == 'CANCELLED' &&
                        (resource.data.status == 'PENDING' || resource.data.status == 'CONFIRMED'));
      
      allow delete: if isAdmin();
    }
    
    // ==========================================
    // TIME SLOTS
    // ==========================================
    match /timeSlots/{slotId} {
      allow read: if true;
      // In a real app, this should be Cloud Functions only.
      // For this architecture, we allow authenticated users to update slots 
      // via the transaction, but we could restrict fields.
      allow write: if isAuthenticated(); 
    }

    // ==========================================
    // CATCH ALL - DENY EVERYTHING ELSE
    // ==========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}