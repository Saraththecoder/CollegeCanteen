rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Strict admin check using custom claims or specific document lookup
    function isAdmin() {
      return isAuthenticated() && 
             (request.auth.token.email == 'admin@canteen.com' || 
              (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN'));
    }

    // Type Validation Helpers
    function isString(data) { return data is string; }
    function isNumber(data) { return data is number || data is int || data is float; }
    function isBoolean(data) { return data is bool; }
    function isNotEmpty(data) { return isString(data) && data.size() > 0; }
    
    // ==========================================
    // SETTINGS COLLECTION (Store Status)
    // ==========================================
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ==========================================
    // USERS COLLECTION
    // ==========================================
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      
      allow create: if isAuthenticated() && 
                       isOwner(userId) &&
                       request.resource.data.keys().hasAll(['email', 'displayName', 'role']) &&
                       isString(request.resource.data.email) &&
                       isString(request.resource.data.displayName) &&
                       // CRITICAL: User cannot set themselves as ADMIN on creation
                       request.resource.data.role == 'USER';
      
      allow update: if isOwner(userId) &&
                       // CRITICAL: User cannot change their role
                       request.resource.data.role == resource.data.role;
      
      allow delete: if isAdmin();
    }
    
    // ==========================================
    // MENU ITEMS COLLECTION
    // ==========================================
    match /menuItems/{itemId} {
      allow read: if true;
      
      // Strict schema validation for menu items
      allow write: if isAdmin() && 
                      isNotEmpty(request.resource.data.name) &&
                      isNumber(request.resource.data.price) &&
                      request.resource.data.price >= 0;
    }
    
    // ==========================================
    // ORDERS COLLECTION
    // ==========================================
    match /orders/{orderId} {
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       isNumber(request.resource.data.totalAmount) &&
                       request.resource.data.totalAmount > 0 &&
                       request.resource.data.items.size() > 0 &&
                       // Validate Status
                       (request.resource.data.status == 'PENDING' || request.resource.data.status == 'CONFIRMED') &&
                       // Validate Contact Info
                       isNotEmpty(request.resource.data.customerName) &&
                       isNotEmpty(request.resource.data.customerMobile);
      
      allow update: if isAdmin() || 
                       (isOwner(resource.data.userId) &&
                        // Users can only cancel
                        request.resource.data.status == 'CANCELLED' &&
                        // Users can only cancel if not yet preparing/completed
                        (resource.data.status == 'PENDING' || resource.data.status == 'CONFIRMED'));
      
      allow delete: if isAdmin();
    }
    
    // ==========================================
    // TIME SLOTS COLLECTION
    // ==========================================
    match /timeSlots/{slotId} {
      allow read: if true;
      // We allow authenticated writes here because the transaction creates/updates slots
      // Ideally this would be done via Cloud Functions to be stricter, but for this architecture:
      allow write: if isAuthenticated(); 
    }

    // ==========================================
    // DEFAULT DENY
    // ==========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}